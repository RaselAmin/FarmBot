<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="25dp"
            android:layout_weight="2"
            android:text="@string/system"
            android:textSize="18dp"/>

        <Switch
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="15dp"
            android:id="@+id/myswitch"
            android:layout_marginRight="15dp"
            android:checked="false"
            android:textOn="On"
            android:textOff="Off"
            android:layout_gravity="center_vertical|left"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:padding="15dp"
        android:textColor="@color/f5"
        android:text="@string/currentCondition"
        android:textSize="18dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_marginRight="30dp"
            android:text="@string/temparature"
            android:textSize="18dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_marginRight="30dp"
            android:text="_F"
            android:textSize="18dp"
            android:id="@+id/sensorView1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_marginRight="30dp"
            android:text="@string/humidity"
            android:textSize="18dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_marginRight="30dp"
            android:text="_F"
            android:textSize="18dp"
            android:id="@+id/sensorView2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_marginRight="30dp"
            android:text="@string/irrigate"
            android:textSize="18dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_marginRight="30dp"
            android:text="_F"
            android:textSize="18dp"
            android:id="@+id/sensorView3"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_marginRight="30dp"
            android:text="@string/fertile"
            android:textSize="18dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_marginRight="30dp"
            android:text="_F"
            android:textSize="18dp"
            android:id="@+id/sensorView0"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
        <TextView
            android:id="@+id/testView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X???"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/txtString"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Y????"
            android:textSize="12dp" />
    </LinearLayout>

</LinearLayout>